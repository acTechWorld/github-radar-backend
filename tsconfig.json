{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",      // Output folder
    "baseUrl": "./",         // Base URL for module resolution
    "paths": {
      "@/*": ["src/*"]       // Alias for 'src'
    }
  },
  "include": ["src/**/*"],   // Include all files in 'src'
  "exclude": ["node_modules", "dist"] // Exclude 'node_modules' and 'dist'
}
